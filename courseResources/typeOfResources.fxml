<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" xmlns:fx="http://javafx.com/javafx" fx:controller="student.typeOfResources">
    
    <!-- Display the selected course -->
    <Label fx:id="selectedCourseLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Selected Course: " />

    <!-- Dropdown to select the resource type -->
    <ComboBox fx:id="resourceTypeComboBox" prefWidth="200" promptText="Select Resource Type" />

    <!-- Proceed button -->
    <Button text="Proceed" onAction="#handleProceedButton" />
</VBox>