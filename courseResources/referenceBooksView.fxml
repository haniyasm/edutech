<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.web.WebView?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="student.referenceBooksController" spacing="10" alignment="CENTER">
    <Label fx:id="selectedCourseLabel" text="Selected Course: " />
    <ComboBox fx:id="referenceBooksComboBox" onAction="#handleBookSelection" />
    <Label fx:id="bookUrlLabel" text="Download URL: " />
    <WebView fx:id="webView" prefHeight="300" prefWidth="500" />
    <Button text="Download Book" onAction="#handleDownloadButton" />
</VBox>
